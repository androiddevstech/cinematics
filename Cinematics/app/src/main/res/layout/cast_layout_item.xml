<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_margin="2dp"
    android:orientation="vertical"
    >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.cinematics.santosh.cinematics.ui.util.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/DarkOrange"
        android:id="@+id/castImage"
        android:background="@drawable/castcrewimgview"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CB"
        android:textSize= "24sp"
        android:textColor="@color/Black"
        android:id="@+id/circularimgPlaceholder"
        />


</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="visible"
        android:textColor="@color/DarkOrange"
        android:id="@+id/castName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="visible"
        android:id="@+id/characterName"/>

</LinearLayout>